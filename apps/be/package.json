{
  "name": "be",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start": "yarn generate:schema && node ./dist/src/index.js",
    "dev": "concurrently \"yarn generate:schema watch\" \"yarn generate:types --watch\" \"tsx watch src/index.ts\"",
    "db:init": "docker compose up -d",
    "db:seed": "tsx src/datasources/scripts/pg-init.ts",
    "generate:types": "graphql-codegen",
    "generate:schema": "tsx scripts/generate-schema.ts",
    "lint": "TIMING=1 eslint \"**/*.ts*\""
  },
  "dependencies": {
    "@apollo/datasource-rest": "^5.0.2",
    "@apollo/server": "^4.3.1",
    "@librora/schemas": "*",
    "@sendgrid/mail": "^7.7.0",
    "@types/lodash": "^4.14.191",
    "dataloader": "^2.1.0",
    "date-fns": "^2.29.3",
    "dotenv": "^16.0.3",
    "envalid": "^7.3.1",
    "graphql": "^16.6.0",
    "jose": "^4.11.2",
    "knex": "^2.4.1",
    "lodash": "^4.17.21",
    "pg": "^8.8.0",
    "pretty-error": "^4.0.0",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@graphql-codegen/cli": "^2.16.4",
    "@graphql-codegen/graphql-modules-preset": "^2.5.11",
    "@graphql-codegen/near-operation-file-preset": "^2.5.0",
    "@graphql-codegen/typescript": "^2.8.7",
    "@graphql-codegen/typescript-resolvers": "^2.7.12",
    "@graphql-tools/load-files": "^6.6.1",
    "@graphql-tools/merge": "^8.3.15",
    "@librora/eslint-config-custom": "*",
    "@librora/tsconfig": "*",
    "@types/node": "^18.11.18",
    "chokidar": "^3.5.3",
    "concurrently": "^7.6.0",
    "eslint": "7.32.0",
    "ts-node": "^10.9.1",
    "tsx": "^3.12.2",
    "typescript": "^4.9.4"
  }
}
